<div class="row">
  <div class="col-md-7">
    <%= image_tag(@idea.picture_url, width: '50%') if @idea.picture.present? %>
  </div>

  <div class="col-md-5">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
       <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-warning" %> 
       <%= link_to 'Delete', @idea, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger" %>
       <%= link_to 'Back', ideas_path, class: "btn btn-info" %>
    </p>
  </div>
</div>
<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <!--<p><%= image_tag(comment.picture_url, :width => 350) if comment.picture.present? %></p>-->
    <p><%= image_tag(comment.picture_url(:thumb)) if comment.picture.present? %></p>
    <!--<p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>-->
  </div>
<% end %>

